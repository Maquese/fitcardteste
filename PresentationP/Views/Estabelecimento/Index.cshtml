@model IEnumerable<ApplicationContract.DTOS.EstabelecimentoDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Nome</th>
        <th>Nome Fantasia</th>
        <th>Cnpj</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Categoria</th>
        <th>Status</th>
        <th>Ação</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Nome
        </td>
        <td>
            @item.NomeFantasia
        </td>
        <td>
            @item.CNPJ
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.Telefone
        </td>
        <td>
            @item.Categoria.Nome
        </td>
        
            @if (item.Status == true)
            {
                <td>
                    Ativo
                </td>
            }
            else
            {
                <td>
                    Inativo
                </td>
            }
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
